    p {
      margin: 0;
    }

    p span {
      color: #FFEE00;
    }

    a {
      color: inherit;
      text-decoration: none;
      transition: color 0.3s ease-in-out; /* Add a smooth color transition */
    }

    a:hover {
      font-weight: bold;
      color: #FFEE00; /* Change color on hover */
    }

    ul {
      list-style-type: none;
      margin: 0;
      padding: 0;
    }

    nav {
      column-gap: 2em;
      display: grid;
      grid-template-columns: auto auto auto auto;
      padding: 1em 0;
    }

    /* Unique hover effects for each navigation area */
    .entertainment:hover .entertainment-items,
    .social:hover .social-items,
    .google:hover .google-items,
    .utility:hover .utility-items {
      opacity: 1; /* Show list items on hover over the navigation */
    }

    .entertainment li:first-child {
      color: #FFEE00; /* Unique color for entertainment area name */
    }

    .social li:first-child {
      color: #FBB806; /* Unique color for social area name */
    }

    .google li:first-child {
      color: #F6830C; /* Unique color for google area name */
    }

    .utility li:first-child {
      color: #F24D11; /* Unique color for utility area name */
    }

    .entertainment-items,
    .social-items,
    .google-items,
    .utility-items {
      opacity: 0; /* Initially hide list items */
      transition: opacity 0.5s ease-in-out; /* Add a smooth opacity transition */
    }

    .entertainment-items:hover a {
      color: #FFEE00; /* Coherent hover color for entertainment items */
    }

    .social-items:hover a {
      color: #FBB806; /* Coherent hover color for social items */
    }

    .google-items:hover a {
      color: #F6830C; /* Coherent hover color for google items */
    }

    .utility-items:hover a {
      color: #F24D11; /* Coherent hover color for utility items */
    }

    li:first-child {
      font-weight: bold;
    }

    li:last-child {
      margin: 0 0 1em;
    }

    p #cursor {
      background-color: #FFEE00;
      animation: blink 2s infinite;
    }

    @keyframes blink {
      0%, 49% { opacity: 0; }
      50% { opacity: 1; }
    }